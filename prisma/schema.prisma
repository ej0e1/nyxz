// Prisma 6 - PostgreSQL (Railway)
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Run: npm run db:seed

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(cuid())
  email      String       @unique
  name       String?
  image      String?
  createdAt  DateTime     @default(now())
  files      File[]
  torrentJobs TorrentJob[]

  // NextAuth
  accounts   Account[]
  sessions   Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token     String?
  expires_at       Int?
  token_type       String?
  scope            String?
  id_token         String?
  session_state    String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model File {
  id        String   @id @default(cuid())
  userId    String
  name      String
  size      BigInt
  mimeType  String
  wasabiKey String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model TorrentJob {
  id          String    @id @default(cuid())
  userId      String
  magnetLink  String
  status      String    // DOWNLOADING | COMPLETED | FAILED
  progress    Int       @default(0)
  createdAt   DateTime  @default(now())
  completedAt DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}
